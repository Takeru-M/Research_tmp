// 開発環境
docker compose -f docker-compose.yml -f docker-compose.dev.yml up -d --build

// 本番環境
docker compose -f docker-compose.yml -f docker-compose.prod.yml up -d --build

// テスト環境（Docker Composeネットワーク内でコマンドを実行）
docker compose exec backend bash -c "php artisan migrate --env=testing && vendor/bin/phpunit"

// キャッシュ削除
docker compose down --volumes --remove-orphans
docker compose -f docker-compose.yml -f docker-compose.dev.yml build --no-cache
docker compose up -d

// コンテナ削除
docker compose down --remove-orphans
docker compose down -v

// 管理者でコンテナに入る
docker compose exec -it --user root コンテナ名 sh

// モデルを追加・変更
alembic revision --autogenerate -m "コメント"

// マイグレーション実行
alembic upgrade head

// マイグレーションの取り消し
alembic downgrade -1

// シーディング（ユーザ）
（backendコンテナ内で）python app/scripts/seed.py

// テーブル削除前
SET FOREIGN_KEY_CHECKS = 0;

// babelのコンパイル
pybabel compile -d app/i18n/locales